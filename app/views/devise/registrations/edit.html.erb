<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="card bg-base-100 w-full max-w-2xl mx-auto shadow-xl rounded-2xl border border-base-300/50"> <!-- bg-base-100 é branco no tema winter -->
    <div class="card-body p-8 sm:p-10">
      <h2 class="text-3xl font-bold text-base-content mb-8 text-center"> <!-- text-base-content -->
        Editar Perfil
      </h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-base-content mb-1.5" %> <!-- text-base-content -->
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full rounded-lg py-2.5 px-3.5 text-base focus:border-primary focus:ring-primary/50", placeholder: "seu.email@exemplo.com" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert bg-blue-500/10 text-blue-700 rounded-lg p-4 text-sm"> <!-- Cores explícitas, bom contraste -->
            <svg xmlns="[http://www.w3.org/2000/svg](http://www.w3.org/2000/svg)" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-5 h-5 mr-2"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            <span class="font-medium">Aguardando confirmação para: <%= resource.unconfirmed_email %></span>
          </div>
        <% end %>

        <div>
          <%= f.label :password, "Nova Senha", class: "block text-sm font-medium text-base-content mb-1.5" %> <!-- text-base-content -->
          <p class="text-xs text-base-content/70 mb-1"> (Deixe em branco se não quiser alterar)</p> <!-- text-base-content/70 -->
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full rounded-lg py-2.5 px-3.5 text-base focus:border-primary focus:ring-primary/50", placeholder: "••••••••" %>
          <% if @minimum_password_length %>
            <p class="text-xs font-medium text-primary mt-1.5"> <!-- text-primary (azul no winter) deve ter bom contraste -->
              <%= @minimum_password_length %> caracteres no mínimo
            </p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirme a Nova Senha", class: "block text-sm font-medium text-base-content mb-1.5" %> <!-- text-base-content -->
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full rounded-lg py-2.5 px-3.5 text-base focus:border-primary focus:ring-primary/50", placeholder: "••••••••" %>
        </div>

        <div class="divider text-sm text-base-content/50 pt-2">Para Salvar</div> <!-- text-base-content/50 -->

        <div class="p-4 bg-base-200/50 rounded-lg border border-base-300/70"> <!-- bg-base-200 é off-white -->
          <%= f.label :current_password, "Senha Atual", class: "block text-sm font-medium text-base-content mb-1.5" %> <!-- text-base-content -->
           <p class="text-xs text-base-content/70 mb-1">(Necessária para confirmar as alterações)</p> <!-- text-base-content/70 -->
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input input-bordered w-full rounded-lg py-2.5 px-3.5 text-base focus:border-primary focus:ring-primary/50", required: true, placeholder: "••••••••" %>
        </div>

        <div class="pt-2">
          <%= f.submit "Atualizar Cadastro", class: "btn btn-primary w-full rounded-lg font-semibold text-base py-3" %> <!-- btn-primary tem texto contrastante por padrão -->
        </div>
      <% end %>

      <div class="divider my-8 text-sm text-base-content/50">Opções da Conta</div> <!-- text-base-content/50 -->

      <div class="text-center">
          <h3 class="text-lg font-semibold text-base-content mb-3">Cancelar Conta</h3> <!-- text-base-content -->
          <p class="mb-4 text-sm text-base-content/70">Não está satisfeito?</p> <!-- text-base-content/70 -->
          <%= button_to "Cancelar Minha Conta", registration_path(resource_name), data: { confirm: "Tem certeza que deseja cancelar sua conta? Esta ação não pode ser desfeita.", turbo_confirm: "Tem certeza que deseja cancelar sua conta? Esta ação não pode ser desfeita." }, method: :delete, class: "btn btn-error btn-outline rounded-lg font-medium text-sm py-2.5 px-5" %>
      </div>

      <div class="text-center mt-8">
        <%= link_to "Voltar", :back, class: "btn btn-ghost rounded-lg font-medium text-sm text-base-content hover:bg-base-300/70" %> <!-- text-base-content -->
      </div>
    </div>
  </div>
</div>