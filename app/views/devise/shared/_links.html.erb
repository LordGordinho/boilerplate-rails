<div class="text-center space-y-3">
  <%- if controller_name != 'sessions' %>
    <p class="text-sm">
      <%= link_to "Entrar na sua conta", new_session_path(resource_name), class: "link link-primary font-medium hover:underline" %> <!-- link-primary (azul) -->
    </p>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <p class="text-sm">
      <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "link text-base-content/70 hover:text-primary font-medium text-xs" %> <!-- text-base-content/70 -->
    </p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <p class="text-sm">
      <%= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name), class: "link text-base-content/70 hover:text-primary font-medium text-xs" %> <!-- text-base-content/70 -->
    </p>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <p class="text-sm">
      <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), class: "link text-base-content/70 hover:text-primary font-medium text-xs" %> <!-- text-base-content/70 -->
    </p>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="divider text-sm text-base-content/50 my-4">Ou entre com</div> <!-- text-base-content/50 -->
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= form_with url: omniauth_authorize_path(resource_name, provider), method: :post, data: { turbo: "false" } do |f| %>
        <%= f.submit "#{OmniAuth::Utils.camelize(provider)}", class: "btn btn-outline btn-neutral w-full rounded-lg font-medium" %> <!-- btn-neutral deve ter texto contrastante -->
      <% end %>
    <% end %>
  <% end %>
</div>