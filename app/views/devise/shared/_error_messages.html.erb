<% if resource.errors.any? %>
  <div id="error_explanation" class="alert bg-red-500/10 text-red-600 rounded-lg p-4 mb-6 border border-red-500/20"> <!-- Cor de texto explícita (vermelho escuro) -->
    <div class="flex items-start">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-5 w-5 mr-2.5 mt-0.5" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      <div>
        <h4 class="font-semibold text-base"> <!-- Texto dentro do alerta já é vermelho escuro -->
          <%= I18n.t("errors.messages.not_saved",
                   count: resource.errors.count,
                   resource: resource.class.model_name.human.downcase)
           %>
        </h4>
        <ul class="list-disc list-inside mt-1.5 space-y-0.5">
          <% resource.errors.full_messages.each do |message| %>
            <li class="text-sm"><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>